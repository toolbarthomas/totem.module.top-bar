{% extends "totem_submodules::totem.template.module/module.twig" %}

{% block module %}

    {% embed "totem_submodules::totem.module.top-bar/partials/top-bar.twig" %}
        {% block module %}
            <h1>Top Bar</h1>
        {% endblock %}
    {% endembed %}

    <img src="http://placehold.it/200x3000" alt="">

{% endblock %}

{% block head %}
    <link href="stylesheets/top-bar.css" rel="stylesheet"/>

    <style>
        .top-bar {
            background-color: grey;
            border-botto: solid 1px black;
            padding: 10px;
        }
    </style>

{% endblock %}

{% block foot %}
    <script>{% include "totem_submodules::totem.module.top-bar/node_modules/jquery/dist/jquery.min.js" ignore missing %}</script>

    <script src="javascripts/top-bar.js"></script>

    <script>
        $(function() {
            setTopBar();
        });
    </script>

{% endblock %}